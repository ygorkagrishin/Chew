.page__reserv
  .page__hero
    background greyColor url('img/content/reserv/nick-karvounis-463853-unsplash_form.png') no-repeat top / cover

.reserv
  padding 150px 0 170px 0

.reserv__reserv
  padding 150px 0 170px 0

.reserv__title
  margin-bottom 50px
  text-align center
  span 
    position relative
    z-index $z-index1

    display inline-block
    &::after
      content ''
      position absolute
      bottom 20%
      left 0
      z-index -1
      display block
      width 100%
      height 5px
      background-color: yellowColor

.reserv__main-title
  margin-bottom 44px
  text-align center

.reserv__reserv
  position relative
  z-index: $z-index1

  padding 63px 72px 71px 72px
  background greyColor url('img/content/reserv/nick-karvounis-463853-unsplash_form.png') no-repeat center / cover
  &::after
    content ''
    position absolute
    top 0
    left 0
    z-index -1 
    width 100%
    height 100%
    background-color rgba(blackColor,.7)

.reserv__row
  display flex

.reserv__col
  flex-basis 50%
  &:not(:last-child)
    padding-right 54px

.reserv__nb
  margin-bottom 22px
  padding-right 42px
  color whiteColor
  span 
    color yellowColor

