.page__menu-list
  .page__hero
    background greyColor url('img/content/menu-list/avi-richards-719272-unsplash_1920px.png') no-repeat 50% 50% / cover

.menu-list
  padding 150px 0
  .sect__title
    text-align center

.menu-list__header
  max-width 770px
  margin 0 auto
  padding-bottom 44px
  text-align center

.menu-list__main-title
  margin-bottom 18px

.menu-list__sect:not(:last-child)
  margin-bottom 42px

.menu-list__top
  position relative
  z-index $z-index1
  margin-bottom 52px
  padding 168px 0 128px 0
  text-align center
  &::after
    content ''
    position absolute
    top 0
    left 0
    z-index -1
    width 100%
    height 100%
    background-color rgba(blackColor,.3)

.menu-list__sect-name
   @extend .page__headline  

.menu-list__row
  display flex

.menu-list__col
  flex-basis 50%
  &:not(:last-child)
    margin-right 24px

.menu-list__dish:not(:last-child)
  margin-bottom 41px

.menu-list-dish__top
  display flex
  justify-content space-between
  margin-bottom 8px

.menu-list-dish__name
  font-size 18px
  line-height 1

.menu-list-dish__price
  font 18px / 1 baseFont2

.page__menu-list
  .page__footer
    background greyColor url('img/content/menu-list/avi-richards-719272-unsplash_1920px.png') no-repeat center / cover