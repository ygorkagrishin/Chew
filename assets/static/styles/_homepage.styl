.homepage-reserv
  margin-bottom 150px
  padding-bottom 66px

.homepage-reserv__title
  margin-bottom 30px

.homepage-reserv__reserv
 @extend .reserv__reserv

.homepage-reserv__nb
  @extend .reserv__nb

.homepage-reserv__row
  @extend .reserv__row

.homepage-reserv__col
  @extend .reserv__col

.homepage-form__rows
  @extend .reserv-form__rows

.homepage-form__row
  @extend .reserv-form__row

.homepage-form__col
  @extend .reserv-form__col

.homepage-form__label
  @extend .reserv-form__label

.homepage-form__input
  @extend .reserv-form__input

.homepage-form__submit
  @extend .reserv-form__submit

.homepage-reserv__location-container
  @extend .reserv__location-container

.homepage-reserv__location
  @extend .reserv__location

// Blog
.homepage-blog__top
  @extend .homepage-feat__top
  .sect__title
    @extend .homepage-feat__top .sect__title

.homepage-blog__blog-page
  @extend .homepage-feat__menu-page
  [name="arrow-forward"]
    vertical-align -3px

.homepage-blog__title
  margin-bottom 32px

.homepage-blog__posts
  display flex

.homepage-blog__post:not(:last-child)
  margin-right 30px

.homepage-post
  flex 1

.homepage-post__pic
  position relative
  margin-bottom 23px
  padding-top 270px
  background-color greyColor
  overflow hidden
  img 
    position absolute
    top -50%
    left 0
    width 100%

.homepage-post__name
  margin 9px 0 24px 0
  font-size 18px
  text-transform initial

.homepage-post__text
  margin-bottom 26px

.homepage-post__continue 
  font 14px / 1 baseFont2
  letter-spacing .5px
  text-transform uppercase
  color blackColor
  ion-icon
    margin-left 6px
    vertical-align -1px

.page__homepage
  .page__footer
    background url('img/content/homepage/annie-spratt-464747-unsplash_1920px.png') no-repeat bottom / cover